@page "/users"
@using BlazorApp_firstProgram.Data
@inject BlazorApp_firstProgram.IService.IServiceObj<User> userService
<h3>UsersDataBase</h3>

<div class="row">
    <div class="col-nd-4">
        <label>Firstname:</label>
    </div>
    <div class="col-nd-8">
        <input @bind="user.firstname" style="width:40%;" placeholder="Firstname" />
    </div>
</div>
<div class="row">
    <div class="col-nd-4">
        <label>Lastname:</label>
    </div>
    <div class="col-nd-8">
        <input @bind="user.lastname" style="width:40%;" placeholder="Lastname" />
    </div>
</div>
<div class="row">
    <div class="col-nd-4">
        <label>Hometown:</label>
    </div>
    <div class="col-nd-8">
        <input @bind="user.hometown" style="width:40%;" placeholder="Hometown" />
    </div>
</div>
<div class="row">
    <div class="col-nd-4">
        <label>Age:</label>
    </div>
    <div class="col-nd-8">
        <input @bind="user.age" type="number" style="width:40%;" placeholder="Age" />
    </div>
</div>
<div class="row">
    <div class="col-nd-4"></div>
    <div class="col-nd-8">
        <button class="btn btn-primary" @onclick="@(e=>Save())">Save</button>
        <button class="btn btn-danger" @onclick="@(e=>Reset())" style="float:right">Reset</button>
    </div>
</div>
@if (usersArr == null)
{
    <h1>Sorry, we could not load this product because of an error.</h1>
}
else
{
    <table class="table">
        <thead>
            <tr>

                <th> № </th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hometown</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usersArr)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.firstname</td>
                <td>@user.lastname</td>
                <td>@user.hometown</td>
                <td>@user.age</td>
                <td>
                    <button class="btn btn-primary" @onclick="@(e=>Edit(@user.Id))">Edit</button>
                    <button class="btn btn-danger" @onclick="@(e=>Delete(@user.Id))" style="float:right">Delete</button>
                </td>
            </tr>
            }
        </tbody>

    </table>
}


@code {
    User user = new User();
    List<User> usersArr = new List<User>();

    protected override async Task OnInitializedAsync()
    {
        GetUsers();
    }
    private void GetUsers()
    {
        usersArr = userService.GetUsers();
    }
    private void Save()
    {
        userService.SaveOrUpdate(user);
        Reset();
        GetUsers();
    }
    private void Reset()
    {
        user = new User();
    }
    private void Edit(string userId)
    {
        user = userService.GetUser(userId);
    }
    private void Delete(string userId)
    {
        userService.Delete(userId);
        GetUsers();
    }
}
