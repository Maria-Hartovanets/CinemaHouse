@inject ModelAccount.Password currentPassword
<div class="top-row pl-4">
    <a class="navbar-brand" href="">Cinema menu</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Сinema
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="popcorn">
                <span class="oi oi-box" aria-hidden="true"></span> Pop corn
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="tickets">
                <span class="oi oi-basket" aria-hidden="true"></span> Tickets
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="actorsDB">
                <span class="oi oi-star" aria-hidden="true"></span> Actors
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="actorsInfo">
                <span class="oi oi-pencil" aria-hidden="true"></span> Add post
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="staff">
                <span class="oi oi-person" aria-hidden="true"></span> Staff
            </NavLink>
        </li>
        @if (currentPassword.PasswordInputed == passwordTemp) 
        { 
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <span class="oi oi-fullscreen-exit" aria-hidden="true"></span> Log in
            </NavLink>
        </li>
        }
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="adminwork">
                <span class="oi oi-people" aria-hidden="true"></span> User DB
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    string passwordTemp = "12345";

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
